<% layout('layout/boilerplate') %>
<!-- CLUSTER MAP -->
<div id="cluster-map"></div>

<h1 class="display-5 mb-5">All CampGrounds</h1>
<ul>
    <% for( let i = 0; i < campgrounds.length; i++ ) { %>
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <% if (campgrounds[i].images.length>0) { %> 
                <img src="<%= campgrounds[i].images[0].url %>" class="img-fluid rounded-start" alt="...">
                <% } else {%>
                    <img src="<%= defaultUrl %> " class="img-fluid rounded-start" alt="...">
                <% } %> 
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campgrounds[i].title %></h5>
                    <p class="card-text"><%= campgrounds[i].description %></p>
                    <p class="card-text"><small class="text-muted"><%= campgrounds[i].location %></small></p>
                    <a href="/campground/show/<%= campgrounds[i]._id %> " class="btn btn-primary">View <%= campgrounds[i].title %></a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</ul>

<script>
    const mapToken='<%- process.env.MAPBOX_TOKEN %>'
    const campground = {features:<%-JSON.stringify(campgrounds)%>}
</script>

<script src="/js/clusterMap.js"></script>