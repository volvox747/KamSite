<% layout('layout/boilerplate') %>
    <h1 class="display-6 text-center mb-5">New CampGround</h1>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <!-- novalidate attribute prevents the browser to default validate the form  -->
            <form action="/campground/newcampground/create" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" placeholder="Title" id="title" class="form-control mb-3" required />
                <div class="invalid-feedback">Please provide a title.</div>

                <label for="imageurl" class="form-label">Upload Image</label>
                <input class="form-control mb-3" type="file" name="image" id="imageurl" required multiple />
                <div class="invalid-feedback">Please provide a Image</div>

                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" placeholder="Location" id="location" class="form-control mb-3"
                    required />
                <div class="invalid-feedback">Please provide a location.</div>

                <label for="price" class="form-label">CampGround Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" name="price" id="price" placeholder="0.00" required />
                </div>
                <div class="invalid-feedback">Please provide a valid price.</div>

                <label for="description" class="form-label">Description</label>
                <textarea name="description" placeholder="Description" id="description" class="form-control mb-3"
                    cols="30" rows="3" required></textarea>
                <div class="invalid-feedback">Please provide a description.</div>

                <button type="submit" class="btn btn-success mt-3">Add CampGround</button>
            </form>
        </div>
    </div>